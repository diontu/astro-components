---
interface Props {
    /** background color must be a valid CSS string. e.g. var(--variable) */
    color?: string;
    /** whether this wrapper is at the top of the page */
    isTop?: boolean;
    /** additional classes */
    class?: string;
}

const { color, isTop = false, class: className } = Astro.props
---

<div class={`simple ${isTop ? 'top' : ''} ${className}`} style={{ background: color }}>
    <div class="content">
        <slot />
    </div>
</div>

<style>
    .simple {
        position: relative;
        overflow: hidden;
        background-color: var(--bg-color);
        padding: 60px 0;
    }
    .content {
        padding: 0 1rem;
        margin: 0 auto;
        max-width: var(--max-content-width);
    }
    .top {
        padding-top: 90px;
    }
</style>