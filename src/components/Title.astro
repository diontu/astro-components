---
interface Props {
  id?: string;
  variant: 'landing-page' | 1 | 2;
  class?: string;
}

const { id: idName, variant, class: className } = Astro.props;
const id = idName ?? '';
---

{variant === 'landing-page' && (
    <h1 id={id ?? ''} class={`header landing-page ${className}`}><slot/></h1>
)}
{variant === 1 && (
    <h1 id={id ?? ''} class={`header header-1 ${className}`}><slot/></h1>
)}
{variant === 2 && (
    <h2 id={id ?? ''} class={`header header-2 ${className}`}><slot/></h1>
)}

<style>
    .header {
        color: var(--text-color);
    }
    .landing-page { 
        font-size: var(--landing-page-font-size);
    }
    .header-1 {
        font-size: var(--h1-font-size);
    }
    .header-2 {
        font-size: var(--h2-font-size);
    }
</style>