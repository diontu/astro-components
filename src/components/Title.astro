---
interface Props {
    id?: string
    variant: 'landing-page' | 1 | 2
    class?: string
    noPadding?: boolean
}

const { id: idName, variant, class: className, noPadding = false } = Astro.props
const id = idName ?? ''
---

{
    variant === 'landing-page' && (
        <h1
            id={id ?? ''}
            class={`header landing-page ${className} ${noPadding ? 'noPadding' : ''}`}
        >
            <slot />
        </h1>
    )
}
{
    variant === 1 && (
        <h1
            id={id ?? ''}
            class={`header header-1 ${className} ${noPadding ? 'noPadding' : ''}`}
        >
            <slot />
        </h1>
    )
}
{
    variant === 2 && (
        <h2
            id={id ?? ''}
            class={`header header-2 ${className} ${noPadding ? 'noPadding' : ''}`}
        >
            <slot />
        </h2>
    )
}

<style>
    .noPadding {
        margin: 0;
    }
    .landing-page {
        font-size: var(--font-size-hero);
    }
    .header-1 {
        font-size: var(--font-size-h1);
    }
    .header-2 {
        font-size: var(--font-size-h2);
        color: var(--primary-color);
    }
</style>
