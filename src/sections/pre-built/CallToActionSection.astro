---
import SectionWrappers from '@section-wrappers'
import Sections from '@sections'
import Button from '@components/Button.astro'
---

<SectionWrappers.Simple
    color="var(--bg-color-dark)"
    paddingTop="xsm"
    paddingBottom="xsm"
>
    <Sections.Feature
        invertTextColor
        justify="center"
        primary={{
            col: 12,
            align: 'center',
            title: 'Change starts here',
            description: 'a very very long description',
            titleVariant: 1,
        }}
    >
        <Button shape="round" variant="secondary-dark" size="lg"
            >Book a call</Button
        >
    </Sections.Feature>
</SectionWrappers.Simple>

<style>
    .container {
        height: 70px;
        display: flex;
        justify-content: space-around;
        align-items: center;
        filter: grayscale(1);
    }
</style>
