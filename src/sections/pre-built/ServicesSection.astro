---
import Card from '@components/Card.astro'

type Services = {
    src?: string
    icon?: string
    title: string
    description: string
}[]

const services: Services = [
    {
        icon: 'fa-home',
        title: 'title',
        description:
            'Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been',
    },
    {
        icon: 'fa-home',
        title: 'Tax Auditing',
        description:
            'Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been',
    },
    {
        icon: 'fa-home',
        title: 'Tax Preparation',
        description:
            'Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been',
    },
]
---

<div class="services-section">
    {
        services.map((service) => (
            <Card isFullWidth isPadded>
                <div class="service-card">
                    <div>
                        {service.src && <img class="image" src={service.src} />}
                        {service.icon && (
                            <i class={`icon fa-solid ${service.icon}`} />
                        )}
                        <div class="title">{service.title}</div>
                    </div>
                    <div class="description">{service.description}</div>
                </div>
            </Card>
        ))
    }
</div>

<style>
    .icon {
        font-size: 48px;
        padding-bottom: 16px;
    }
    .services-section {
        display: grid;
        grid-template-columns: 1fr;
        gap: 32px;
        margin: var(--section-y-margin) 0;
    }
    @media only screen and (min-width: 640px) {
        .services-section {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 32px;
        }
    }
    .service-card {
        display: flex;
        gap: 12px;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    .image {
        width: 48px;
        height: 48px;
    }
    .title {
        font-size: var(--text-base);
        font-weight: 500;
    }
    .description {
        font-size: 15px;
        color: var(--color-de-emphasized-3);
    }
</style>
