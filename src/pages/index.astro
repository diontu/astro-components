---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Button from "../components/Button.astro";
import Title from "../components/Title.astro";
import Link from "../components/Link.astro";
import Header from "../components/react/Header";
import SimpleWrapper from "../section-wrappers/SimpleWrapper.astro";
import Feature from "../sections/Feature.astro";

const nav = [
  {
    title: 'About',
    href: '/'
  },
  {
    title: 'Services',
    href: '/'
  },
  {
    title: 'Pricing',
    href: '/'
  }
];
---

<Layout title="Welcome to Astro." description="description">
  <Header nav={nav} isTransparent client:load/>
  <main>
    <SimpleWrapper color="var(--bg-color-accent-light)" isTop class="background">
